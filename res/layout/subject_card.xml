<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:elevation="@dimen/card_elevation"
        android:layout_margin="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_subject_card"
                android:orientation="vertical"
                android:layout_width="7dp"
                android:layout_height="150dp"
                android:background="@color/colorAccent">
            </LinearLayout>


            <ImageView
                android:id="@+id/thumbnail"
                android:contentDescription="@string/subject"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/linear_subject_card"
                android:layout_toRightOf="@+id/linear_subject_card"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/chaplogo" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:paddingTop="15dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:textSize="27sp"
                android:clickable="true"
                android:textColor="@color/colorAccent"
                android:focusable="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linear_subject_card"
                android:layout_toRightOf="@id/linear_subject_card"
                android:layout_toEndOf="@id/linear_subject_card"
                android:layout_below="@+id/thumbnail"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="34sp"
                android:textColor="@color/yellow"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>